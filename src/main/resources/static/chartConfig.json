{
  "type": "gantt",
  "theme": "dark",
  "period": "DD",
  "marginRight": 70,
  "columnWidth": 0.5,

  "valueAxis": {
    "type": "date",
    "minPeriod": "DD"
  },
  "brightnessStep": 10,
  "graph": {
    "fillAlphas": 1,
    "balloonText": "<b>[[employee_name]]</b> участвует в проекте: [[open]] - [[value]] <p>Загружен на: [[employee_workload]]%</p>"
  },
  "rotate": true,
  "categoryField": "employee_name",
  "segmentsField": "projects",
  "colorField": "color",
  "dataDateFormat": "YYYY-MM-DD",
  "startDateField": "start",
  "endDateField": "end",


  "chartCursor": {
    "cursorColor": "#55bb76",
    "valueBalloonsEnabled": false,
    "cursorAlpha": 0,
    "valueLineAlpha": 0.5,
    "valueLineBalloonEnabled": true,
    "valueLineEnabled": true,
    "zoomable": false,
    "valueZoomable": true
  }
}